 
<div>
<canvas id="canvas" width="320" height="240"></canvas>
</div>


<script>
  
    var bl = {x:-1, y:-1, z:5}
    var br = {x:1, y:-1, z:5}
    var tl = {x:-1, y:1, z:5}
    var tr = {x:1, y:1, z:5} 
    
 function worldToScreen(p) {
    let factor = 320
    var screen = {x: p.x / p.z * factor + 160, y: p.y / p.z * factor + 120}
    return screen
}

function rotateZ(p) {
  var point = {x: p.x - p.y*0.017444444, y:p.y + p.x*0.017444444, z: p.z}
  return point;
}
    
   function drawPixel(point) {
     context.fillStyle = "#FFFF"
     context.fillRect(point.x, point.y, 2, 2)
   }

   function update() {
     context.fillStyle = "#000";
     context.fillRect(0, 0, 320, 240);
     
     bl = rotateZ(bl)
     br = rotateZ(br)
     tl = rotateZ(tl)
     tr = rotateZ(tr)
               
     var blr = worldToScreen(bl)
     var brr = worldToScreen(br)
     var tlr = worldToScreen(tl)
     var trr = worldToScreen(tr)
     
     drawPixel(blr)
     drawPixel(brr)
     drawPixel(tlr)
     drawPixel(trr)     
   }
  
    var canvas = document.getElementById("canvas");
    var context = canvas.getContext("2d");

    //Background
 
    setInterval(update, 33)
    // setTimeout(update(33))

    
</script>

